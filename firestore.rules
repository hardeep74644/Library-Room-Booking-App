rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is a librarian
    function isLibrarian() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'librarian';
    }
    
    // Helper function to check if user is a student
    function isStudent() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read their own user document
      allow read: if isSignedIn() && request.auth.uid == userId;
      
      // Only allow creating user document during registration
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Librarians can read all users, update roles, and delete users
      allow read, update, delete: if isLibrarian();
    }
    
    // Rooms collection
    match /rooms/{roomId} {
      // Anyone can read rooms (no authentication required for viewing room info)
      allow read: if true;
      
      // Only librarians can create, update, or delete rooms
      allow create, update, delete: if isLibrarian();
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      // Users can read their own bookings
      allow read: if isSignedIn() && 
                     (request.auth.uid == resource.data.userId || isLibrarian());
      
      // Librarians can read all bookings
      allow read: if isLibrarian();
      
      // Users can create bookings for themselves
      allow create: if isSignedIn() && 
                       request.auth.uid == request.resource.data.userId;
      
      // Users can delete their own bookings, librarians can delete any
      allow delete: if isSignedIn() && 
                       (request.auth.uid == resource.data.userId || isLibrarian());
      
      // Only librarians can update bookings
      allow update: if isLibrarian();
    }
  }
}
